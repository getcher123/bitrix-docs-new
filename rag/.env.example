# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=bitrix_docs

# Vault
VAULT_ROOT=docs
RAG_DATA_DIR=.rag

# BGE provider switch (deepinfra | colab)
BGE_PROVIDER=deepinfra

# DeepInfra endpoints
DEEPINFRA_BASE_URL=https://api.deepinfra.com/v1/inference
DEEPINFRA_EMBED_PATH=/BAAI/bge-m3
DEEPINFRA_RERANK_PATH=/Qwen/Qwen3-Reranker-0.6B
DEEPINFRA_HEALTH_PATH=/health
DEEPINFRA_KEY=

# Colab/ngrok endpoints
COLAB_BASE_URL=
COLAB_EMBED_PATH=/embed
COLAB_RERANK_PATH=/rerank
COLAB_HEALTH_PATH=/health
COLAB_API_KEY=

# Legacy fallback (if BGE_PROVIDER is empty)
BGE_BASE_URL=
BGE_EMBED_PATH=/embed
BGE_RERANK_PATH=/rerank
BGE_HEALTH_PATH=/health
BGE_API_KEY=
BGE_TIMEOUT_S=30
BGE_RETRIES=3

# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-5
OPENAI_TIMEOUT_S=20

# ngrok (public API tunnel)
NGROK_AUTH_TOKEN=

# Indexing
RAG_CHUNK_SIZE=900
RAG_CHUNK_OVERLAP=150
RAG_MIN_CHUNK=200
RAG_MAX_RERANK_CHARS=2000
RAG_EMBED_BATCH=8

# Retrieval
RAG_BM25_K=40
RAG_VECTOR_K=40
RAG_RRF_K=60
RAG_RERANK_K=10
RAG_MAX_LATENCY_S=25
RAG_FAST_REST=1
